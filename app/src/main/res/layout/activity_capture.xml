<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Capture"
    android:orientation="vertical"
    android:background="#6AAE34">

    <!-- Top Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/background_bot_radius">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/groot_logo_1" />

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/group_69"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/img_capture" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Capture"
            android:backgroundTint="#6AAE43"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:id="@+id/btn_predict" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Capture"
            android:backgroundTint="#6AAE43"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#000"
            android:id="@+id/txt_predict" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/border_radius_bot">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/group_69"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="30dp"
            app:tint="#fff" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/group_70"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="30dp"
            app:tint="#808080"
            android:id="@+id/btn_mini_lib" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/group_71"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="30dp"
            app:tint="#808080"
            android:id="@+id/btn_mini_upload" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/group_72"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="30dp"
            app:tint="#808080"
            android:id="@+id/btn_mini_report" />
    </LinearLayout>
</LinearLayout>